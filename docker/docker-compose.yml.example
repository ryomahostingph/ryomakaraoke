services:
  ryomakaraoke:
    image: vicwomg/ryomakaraoke:latest
    container_name: ryomakaraoke
    ## Below Host network mode may work better on some systems and replace manual IP configuration. Does not work on OSX
    # network_mode: host
    ## add additional command line args if needed in example below: debug level logging, manually specified URL
    command: -l10 --url http://<YOUR_LAN_IP>
    volumes:
      - </PATH/TO/LOCAL/SONGS/DIR>:/app/ryomakaraoke-songs # Replace with local dir. to persist songs outside the container
    restart: unless-stopped
    ## Forward host port 80 to the ryomakaraoke web interface on 5555, adjust host port as necessary
    ports:
      - "80:5555"
